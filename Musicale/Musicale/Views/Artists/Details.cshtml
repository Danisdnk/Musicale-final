@model Musicale.Models.Artist


@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm("Details", "Artists", FormMethod.Get, new { @class = "form-horizontal", enctype = "multipart/form-data" }))

{

    <div class="col-lg-12 col-xl-12 col-xs-12 p-0 m-0" id="main">

        <div class="row placa-artista justify-content-between pl-4">

            <div class="  col-xs-12 col-sm-12 col-md-8 col-lg-7 pl-5 mb-3 text-white">
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>

                <h1 class="font-weight-bolder mb-3 text-white artistafont">@Html.DisplayFor(model => model.nombre)</h1>

                <p class="d-none d-md-block"> @Html.DisplayFor(model => model.descripcion)</p>
                <div class="d-flex flex-row bd-highlight mt-5 mb-3">
                    <div class="p-2  bd-highlight">  @Html.DisplayFor(model => model.Albums.FirstOrDefault().Gender.genero)</div>
                    <div class="p-2 pl-5 bd-highlight">Flex item 2</div>
                    <div class="p-2 pl-5 bd-highlight">Flex item 3</div>
                </div>

            </div>
            <div class="col-md-4 col-lg-4 mt-0 d-none d-md-block">


                <img src="  @Html.DisplayFor(model => model.foto)" class="card-img-top blend" alt="...">

            </div>

        </div>


        <div class="row justify-content-between border-0 bg-light m-0 p-0">

            <h4 class="pl-3">Canciones</h4>
            @foreach (var item in Model.Albums)
            {
              
               

                <div class="list-group-item list-group-item-action ">

                    <div class="media d-flex align-items-end">
                        <a href="@Url.Action((string)"Details", "Albums", new { id = item.ID }, null)" class="btn bg-light">
                            <i class="fas fa-edit"> </i>
                        </a> 
                        <img src="@Html.DisplayFor(modelItem => item.portada)" class="mr-3 miniatura"
                                 alt="...">
                        
                        <div class="media-body p-0">
                            <div class="d-flex flex-row bd-highlight d-flex justify-content-start p-0">
                                <div class="pl-5 bd-highlight d-flex align-items-center">
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </div>
                                <dib class=" pl-5 bd-highlight d-flex align-items-center">
                                    @Html.DisplayFor(modelItem => item.ID)

                                </dib>
                                <audio controls class="pl-5">
                                    <source src=" @Html.DisplayFor(modelItem => item.Songs.FirstOrDefault().audio)" type="audio/mp3" />



                                </audio>

                            </div>

                        </div>
                    </div>

                </div>

            }
           
            
            
            <div class="d-block mt-4 bg-light w-100">
                <h4 class="pl-3 d-block">Albums</h4>
            </div>

            <div class="row justify-content-center border-0 bg-light my-0 py-0">

                <div class="card-columns m-0 p-0">



                    @foreach (var item in Model.Albums)
                    {
                        <div class="card mt-3 img-thumbnail rounded albumes respoSize ml-3">
                            <img src="@Html.DisplayFor(modelItem =>item.portada)" class="card-img-top float-left" alt="...">
                            <div class="card-body">
                                <h4 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h4>

                                <p> @Html.DisplayFor(modelItem => item.Artist.nombre)</p>

                                <p>  @Html.HiddenFor(modelItem => item.anio)</p>

                                <p> @Html.HiddenFor(modelItem => item.Gender.genero)</p>

                                <div class="btn-dark">

                                    @Html.ActionLink((string)"Details", "Details", "Albums", new { id = item.ID }, null)
                                    @Html.ActionLink((string)"Edit", "Edits", "Albums", new { id = item.ID }, null)


                                </div>

                            </div>
                        </div>



                    }

                </div>
            </div>
        </div>


    </div>


}
