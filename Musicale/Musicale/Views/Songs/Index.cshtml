@model IEnumerable<Musicale.Models.Song>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Songs", FormMethod.Get, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="col-lg-12 col-xl-12 col-xs-12 p-0 m-0 bg-layout" id="main">
        <div class="row ">
            <div class=" col-lg-12 col-xl-12 p-0 m-0 justify-content-between">

                <h1 class="font-weight-bolder  mt-5 mb-5 text-white">Canciones</h1>

                <div class="form">
                    <div class="input-group mb-3 ">
                        @Html.TextBox("busquedaCancion", null, new { @class = "form-control" })
                        <input class="btn-dark" type="submit" value="Search" />
                    </div>

                </div>



                @Html.ActionLink("Create New", "Create")




            </div>

        </div>

        <div class="row justify-content-center border-0 bg-light my-0 py-0">


            <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 m-0 p-0 vh-100">




                @foreach (var item in Model)
                {



                    <div class="list-group-item list-group-item-action ">

                        <div class="media d-flex align-items-end">
                            <a href="@Url.Action((string)"Edit", "Songs", new { id = item.ID }, null)" class="btn bg-light">
                                <i class="fas fa-edit"> </i>
                            </a>
                            <a href="@Url.Action((string)"Delete", "Songs", new { id = item.ID }, null)" class="btn bg-light">
                                <i class="fas fa-trash"> </i>
                            </a>
                            <img src="@Html.DisplayFor(modelItem => item.Album.portada)" class="mr-3 miniatura"
                                 alt="...">

                            <div class="media-body p-0">
                                <div class="d-flex flex-row bd-highlight d-flex justify-content-start p-0">
                                    <div class="pl-5 bd-highlight d-flex align-items-center">
                                        @Html.DisplayFor(modelItem => item.nombre)
                                    </div>
                                    <dib class=" pl-5 bd-highlight d-flex align-items-center">
                                        @Html.DisplayFor(modelItem => item.Album.nombre)

                                    </dib>
                                    <audio controls class="pl-5">
                                        <source src=" @Html.DisplayFor(modelItem => item.audio)" type="audio/mp3" />



                                    </audio>

                                </div>

                            </div>
                        </div>

                    </div>

                }





            </div>

        </div>
    </div>
}